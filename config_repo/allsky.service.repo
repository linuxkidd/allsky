[Unit]
Description=All Sky Camera
After=multi-user.target

[Service]
User=pi
WorkingDirectory=/home/pi/allsky
Environment=ALLSKY_HOME=/home/pi/allsky
ExecStart=/home/pi/allsky/allsky.py -c ~pi/allsky/config/config.json
SyslogFacility=local5
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
